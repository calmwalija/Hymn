<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="adapter_rv"
            type="net.techandgraphics.hymn.presentation.fragments.discover.DiscoverAdapter" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <net.techandgraphics.hymn.presentation.view.BaseRecyclerView
            android:id="@+id/browse_rv"
            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:adapter="@{adapter_rv}"
            android:scrollbars="vertical"
            app:spanCount="2"
            tools:listitem="@layout/fragment_discover_category_item" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>