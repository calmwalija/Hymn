<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="randomAdapter"
            type="net.techandgraphics.hymn.presentation.fragments.search.SearchRandomAdapter" />

        <variable
            name="lyric"
            type="net.techandgraphics.hymn.data.local.entities.LyricEntity" />

        <variable
            name="favoriteAdapter"
            type="net.techandgraphics.hymn.presentation.fragments.search.SearchAdapter" />

        <variable
            name="searchAdapter"
            type="net.techandgraphics.hymn.presentation.fragments.search.SearchTagAdapter" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutCompat2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textStyle="bold" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Which hymn are you looking for ?" />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutCompat78"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_circle"
                android:backgroundTint="#3E5A5A5A"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat2">

                <FrameLayout
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/search_icon"
                        android:layout_width="42dp"
                        android:layout_height="match_parent"
                        android:background="?actionBarItemBackground"
                        android:padding="8dp"
                        android:src="@drawable/ic_search" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:visibility="invisible"
                        android:layout_gravity="center"
                         android:id="@+id/animationView"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="2dp"
                        app:layout_constraintBottom_toBottomOf="@+id/linearLayoutCompat2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/linearLayoutCompat2"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/lf30_qhwxkcno" />
                </FrameLayout>


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/search_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_circle"
                    android:hint="Search hymn"
                    android:inputType="text|textAutoCorrect|textCapSentences"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:padding="16dp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/clear_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?actionBarItemBackground"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_clear" />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="#tags"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/linearLayoutCompat78"
                app:layout_constraintStart_toStartOf="@+id/linearLayoutCompat78"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat78" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:adapter="@{searchAdapter}"
                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView7"
                app:spanCount="3"
                tools:itemCount="5"
                tools:listitem="@layout/fragment_search_tag_item" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:adapter="@{favoriteAdapter}"
                android:scrollbars="vertical"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView"
                app:spanCount="1"
                tools:itemCount="4"
                tools:listitem="@layout/lyric_item" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="#justrandom"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/linearLayoutCompat78"
                app:layout_constraintStart_toStartOf="@+id/linearLayoutCompat78"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:adapter="@{randomAdapter}"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView17"
                app:spanCount="1"
                tools:itemCount="3"
                tools:listitem="@layout/fragment_search_random_item" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/emptyRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="recyclerView,appCompatTextView7,appCompatTextView17,recyclerView_history" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>