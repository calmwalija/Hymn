<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory app:title="More">

        <Preference
            app:icon="@drawable/ic_info"
            app:key="about"
            app:summary="Developers, donate etc"
            app:title="About" />

        <Preference
            app:icon="@drawable/ic_list"
            app:key="resources"
            app:summary="The Lord's Prayer, The creed etc"
            app:title="Other resources" />

        <SeekBarPreference
            android:defaultValue="2"
            android:max="6"
            app:icon="@drawable/ic_font"
            app:showSeekBarValue="true"
            app:key="font"
            app:min="1"
            app:title="Change lyrics font size" />


    </PreferenceCategory>

    <PreferenceCategory app:title="Contact us">

        <Preference
            app:icon="@drawable/ic_feedback"
            app:key="feedback"
            app:summary="Contact us, report missing hymn etc"
            app:title="Feedback" />

        <Preference
            app:icon="@drawable/ic_rate"
            app:key="rate"
            app:summary="Give us a rating or review at Google play store"
            app:title="Rate and review" />

    </PreferenceCategory>


    <PreferenceCategory app:title="Reset">

        <Preference
            app:icon="@drawable/ic_delete"
            app:key="clear_favorite"
            app:summary="Delete all favorite hymn list"
            app:title="Clear favorites" />

    </PreferenceCategory>

</PreferenceScreen>